{
  "mcpServers": {
    "arxiv-mcp-server": {
      "command": "uv",
      "args": [
        "tool",
        "run",
        "arxiv-mcp-server",
        "--storage-path", "/path/to/paper/storage"
      ],
      "description": "实时追踪ArXiv最新论文，支持关键词检索和摘要提取"
    },
    "pubmed-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/pubmed-server"],
      "env": {
        "NCBI_API_KEY": "your_ncbi_key"
      },
      "description": "医学文献专业检索，支持MeSH术语和高级搜索"
    },
    "local-knowledge": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/filesystem-server", "./research_papers"],
      "description": "访问本地论文库，管理个人论文和笔记"
    }
  }
}